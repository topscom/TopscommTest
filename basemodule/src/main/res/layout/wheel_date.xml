<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wheel_date_LL"
    android:layout_width="270dp"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dialog_selector"
    android:gravity="center"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/wheel_title_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/info_margin_15"
        android:layout_marginTop="@dimen/info_margin_15"
        android:gravity="center_vertical"
        android:text="选择日期"
        android:textColor="#000000"
        android:textSize="18sp" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/alertdialog_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/info_margin_10"
        android:layout_marginRight="@dimen/info_margin_10"
        android:gravity="center_vertical">
        <com.example.xiaojin20135.basemodule.wheelview.widget.views.WheelView
            android:id="@+id/year_WV"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            />
        <com.example.xiaojin20135.basemodule.wheelview.widget.views.WheelView
            android:id="@+id/month_WV"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            />
        <com.example.xiaojin20135.basemodule.wheelview.widget.views.WheelView
            android:id="@+id/day_WV"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            />
        <com.example.xiaojin20135.basemodule.wheelview.widget.views.WheelView
            android:id="@+id/day_half_WV"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/alertdialog_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/date_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:background="@drawable/alertdialog_left_selector"
            android:gravity="center"
            android:text="@string/cancle"
            android:textColor="@color/actionsheet_blue"
            android:textSize="16sp"/>
        <ImageView
            android:id="@+id/img_line"
            android:layout_width="0.5dp"
            android:layout_height="43dp"
            android:background="@color/alertdialog_line"/>
        <Button
            android:id="@+id/date_sure_btn"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:background="@drawable/alertdialog_right_selector"
            android:gravity="center"
            android:text="@string/ok"
            android:textColor="@color/actionsheet_blue"
            android:textSize="16sp"/>
    </LinearLayout>

</LinearLayout>
