                    android:layout_margin="@dimen/info_margin_20"
                    android:text="approveapproveapproveapproveapproveapproveapproveapproveapproveapproveapproveapproveapproveapproveapproveapproveapproveapproveapprove"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/base_rv_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/info_margin_20"
                    android:text="approveapproveapproveapproveapproveapproveapproveapproveapproveapproveapproveapproveapproveapproveapproveapproveapproveapproveapprove"/>
                <Button
                    android:text="确定"
                    android:background="@android:color/darker_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>
